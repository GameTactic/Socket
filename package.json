{
    "name": "socket",
    "version": "0.1.0",
    "description": "Echo backend for GameTactic",
    "repository": {
        "type": "git",
        "url": "https://github.com/GameTactic/Socket"
    },
    "author": "Niko Gran√∂",
    "license": "GPL-3.0-only",
    "scripts": {
        "start": "yarn run serve",
        "build": "yarn run build-ts && yarn run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "yarn run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
    },
    "dependencies": {
        "compression": "^1.7.4",
        "dotenv": "^8.2",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "lusca": "^1.6.1",
        "socket.io": "^2.3.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/engine.io": "^3.1.2",
        "@types/socket.io": "^2.1.4",
        "@types/ws": "^7.2.1",
        "@types/yeast": "^0.1.0",
        "@types/compression": "^1.7.0",
        "@types/dotenv": "^8.2",
        "@types/errorhandler": "^1.5.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/lusca": "^1.6.1",
        "@types/node": "12.7.8",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "concurrently": "^5.0.0",
        "eslint": "^6.4.0",
        "nodemon": "2.0.2",
        "ts-node": "^8.4.1",
        "typescript": "^3.8.2"
    }
}
